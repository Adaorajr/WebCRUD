@model WebCRUDApp.Models.Entidades.Cargo

@{
    ViewData["Title"] = "Create";
}

<h4>Cadastro de Cargo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCargo" class="control-label"></label>
                <input asp-for="NomeCargo" class="form-control" />
                <span asp-validation-for="NomeCargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
