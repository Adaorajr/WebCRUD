@model IEnumerable<WebCRUDApp.ViewModel.FuncViewModel>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create" class="btn btn-success">Novo Colaborador </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCargo)
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id" data-ajax="true" data-ajax-success="deleteItem(this)">
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen"> </i></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"> </i></a>
                    <button type="submit"class="btn btn-sm btn-danger d-none d-md-inline-block"> <i class="fas fa-trash-alt"></i></button>
                </form>
                @*<a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen"> </i></a>
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"> </i></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"> </i> </a>*@          
            </td>

            </tr>
}
    </tbody>
</table>
